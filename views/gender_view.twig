{% extends "home_view.twig" %}

{% block gender %}

<!-- // TOUT LES FILMS PAR LEURS GENRE -->


{% for elem in film %}
<!-- // Chaques films est affiché sous forme de carte qui défileront dans un carroussel  -->
	<div class="card">

		<h1 class="card-title">{{ elem.Titre }}</h1>

		<ul>
			<li>Date de sortie : <a href="">{{ elem.Sortie }}</a></li>
			<li>Auteur : <a href="">{{ elem.Prenom }} {{ elem.Nom }}</a></li>
			<li>Genre: {{ elem }}
				
					{% set foo = elem.genreId|split(',') %}
					{% set foo2 = elem.Theme|split(',') %}
					{% for id in foo %}		
						<a href="/annuaire_film/gender/list/{{ id }}">{{ foo2[loop.index] }}</a>
					{% endfor %}	
			}
			}
			}

			
			</li>
		</ul>

		<p class="card-description">{{ elem.Description }}</p>
		

	</div>

{% endfor %}

{% endblock %}