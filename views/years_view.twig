{% extends "home_view.twig" %}

{% block years %}
   

{% for elem in film %}
<!-- // Chaques films est affiché sous forme de carte qui défileront dans un carroussel  -->
	<div class="card">

		<h1 class="card-title">{{ elem.title }}</h1>

		<ul>
			<li>Date de sortie : <a href="{{ elem.releaseDate }}">{{ elem.releaseDate }}</a></li>
			<li>Auteur : <a href="">{{ elem.prenom }} {{ elem.lastname }}</a></li>
			<li>Genre:
		
					<a href="../gender/{{ elem.id }}">{{ elem.name }}</a>
			
			</li>
		</ul>

		<p class="card-description">{{ elem.description }}</p>
		

	</div>

{% endfor %}


   
{% endblock %}